<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/off_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_pepsi"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_weight="0.75"
            android:background="@color/off_white"
            app:srcCompat="@drawable/pepsi"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:background="@color/off_white"
            android:fontFamily="@font/frankruhllibremedium"
            android:gravity="center"
            android:text="@string/pepsi"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_tea"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_weight="4"
            android:background="@color/orange"
            app:srcCompat="@drawable/tea"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@color/orange"
            android:fontFamily="@font/frankruhllibremedium"
            android:gravity="center"
            android:text="@string/tea"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_mirinda"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_weight="4"
            android:background="@color/black1"
            app:srcCompat="@drawable/mirinda"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@color/black1"
            android:fontFamily="@font/frankruhllibremedium"
            android:gravity="center"
            android:text="@string/mirinda"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
